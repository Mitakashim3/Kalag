# ===========================================
# Kalag Environment Configuration
# ===========================================

# ===========================================
# Backend Configuration
# ===========================================

# FastAPI Settings
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,https://your-app.vercel.app

# ===========================================
# Database Configuration
# ===========================================

# Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# Or SQLite for local development
# DATABASE_URL=sqlite:///./kalag.db

# ===========================================
# Vector Database (Qdrant Cloud)
# ===========================================

QDRANT_URL=https://[YOUR-CLUSTER].qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=kalag_documents

# ===========================================
# AI/LLM Configuration (Google Gemini)
# ===========================================

GOOGLE_API_KEY=your-google-ai-studio-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# ===========================================
# Document Parsing (LlamaParse)
# ===========================================

LLAMA_CLOUD_API_KEY=your-llamaparse-api-key

# ===========================================
# File Storage
# ===========================================

# Local storage path for uploaded files
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# ===========================================
# Security Settings
# ===========================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false  # Set to true in production with HTTPS

# ===========================================
# Frontend Configuration
# ===========================================

VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Kalag
